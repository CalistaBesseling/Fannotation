{
    "manifest_version": 3,
    "name": "Fannotation",
    "description": "Create and share annotated Spotify playlists with friends.",
    "version": "1.0",
    "permissions": [
      "scripting",
      "activeTab",
      "storage",
      "clipboardWrite"
    ],
    "host_permissions": [
      "https://open.spotify.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://open.spotify.com/*"],
        "js": ["Content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  